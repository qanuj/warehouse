@model Warehouse.Web.Models.ManageLoginsViewModel
@using Microsoft.Owin.Security
@{
    ViewBag.Title = "Link Social";
}
<h2>@ViewBag.Title.</h2>
<p class="text-success">@ViewBag.StatusMessage</p>
@{
    if (Model.CurrentLogins.Count > 0)
    {
        <h4>Registered Logins</h4>
            <table class="table table-bordered">
                <tbody>
                    @foreach (var account in Model.CurrentLogins)
                    {
                        <tr>
                            <td><h4><i class="fa fa-@account.LoginProvider.ToLower()"></i> @account.LoginProvider</h4></td>
                            <td>
                                @if (ViewBag.ShowRemoveButton)
                                {
                                    using (Html.BeginForm("RemoveLogin", "Manage"))
                                    {
                                        @Html.AntiForgeryToken()
                                        <div>
                                            @Html.Hidden("loginProvider", account.LoginProvider)
                                            @Html.Hidden("providerKey", account.ProviderKey)
                                            <button type="submit" class="btn btn-danger" title="Remove this @account.LoginProvider login from your account"><i class="fa fa-trash"></i></button>
                                        </div>
                                    }
                                }
                                else
                                {
                                    @: &nbsp;
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
    }
    if (Model.OtherLogins.Count > 0)
    {
        using (Html.BeginForm("LinkLogin", "Manage"))
        {
            @Html.AntiForgeryToken()
            <ul class="social-icons">

                @foreach (AuthenticationDescription p in Model.OtherLogins)
                {
                    var pk = p.AuthenticationType.ToLower();
                    <li>
                        <button type="submit" class="social-icon-color link-btn @pk" id="@p.AuthenticationType" name="provider" value="@p.AuthenticationType" title="Log in using your @p.Caption account"></button>
                    </li>
                }
            </ul>
        }
    }
}
<hr/>
<div class="form-actions">
    <a href="@Url.Action("Index", "Home")" class="btn default">Back</a>
</div>
